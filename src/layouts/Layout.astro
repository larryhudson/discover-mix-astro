---
export interface Props {
  title?: string;
  backLinkUrl?: string;
  backLinkText?: string;
  stepNum?: number;
}

import StepNav from "@components/StepNav.astro";

import "../styles/style.css";

const { title, stepNum, backLinkUrl, backLinkText, hideTitleInLayout } =
  Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | discover-mix</title>
    <link rel="stylesheet" href="/css/custom-select.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <meta
      name="description"
      content="Create big Spotify playlists based on your favourite genres"
    />
    <script>
      document.documentElement.classList.remove("no-js");
    </script>
  </head>
  <body>
    <h1>discover-mix</h1>
    <div class="wrapper">
      <div class="main">
        <StepNav stepNum={stepNum} />

        {
          backLinkUrl && (
            <a class="button button-secondary" href={backLinkUrl}>
              &larr; {backLinkText}
            </a>
          )
        }

        {!hideTitleInLayout && <h2>{title}</h2>}

        <slot />

        {
          backLinkUrl && (
            <a class="button button-secondary" href={backLinkUrl}>
              &larr; {backLinkText}
            </a>
          )
        }
      </div>
    </div>
  </body>
</html>
